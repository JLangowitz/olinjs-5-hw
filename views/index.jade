extends layout

block content
	input(type='hidden', id='user', value='#{userColor}')
	h1= title
	div(class="profile")
		if userColor
			img(src=picURL)
			form(action="/logout", method="get")
				p 
					input(type="submit", name="submit", class="submit", value="Logout")
				p <a href="http://www.w3schools.com/tags/ref_colorpicker.asp">Open this in a new window to get the color code for a background color of your choice and enter it in the box below</a>
			form(id="colorPick")
				input(id="color")
				input(type="submit") 
		else
			form(action="/login", method="get")
				p 
					input(type="submit", name="submit", class="submit", value="Login")
block js
	script( src="/javascripts/main.js" )